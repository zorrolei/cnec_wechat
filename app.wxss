/*grid*/
.row {
  display: block;
  margin: 0px;
}

.row>.col {
  display: flex;
}

.col>.col-1, .col>.col-2, .col>.col-3, .col>.col-4, .col>.col-5, .col>.col-6, .col>.col-7, .col>.col-8, .col>.col-9,.col>.col-10, .col>.col-11, .col>.col-12 {
  overflow: hidden;
}

